<%= render "shared/header"%>

<div class='main'>
  <div class="user-form">
    <div class="form-title">
    新規登録
    </div>
    <div class="form-title2">
    <p>※全て必須項目</p>
    <div class="form-title3">
      <%= link_to 'Facebookで登録', user_facebook_omniauth_authorize_path,class:"form-title-sns", method: :post%>
      <%= link_to 'Googleで登録', user_google_oauth2_omniauth_authorize_path,class:"form-title-sns", method: :post%>
      </div>
    </div>
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
      <%= render 'shared/error_messages', model: f.object %>

      <div class="cp_iptxt">
          <label>nickname</label>
        <%= f.text_field :nickname, autofocus: true, class:"input-default", id:"nickname",placeholder:"ABC ※20字まで", maxlength:"20"  %>
      </div>

      <div class="cp_iptxt">
          <label>email</label>
        <%= f.email_field :email, class:"input-default", id:"email",placeholder:"photomap@gmail.com" %>
      </div>

      <%if @sns_id.present? %>
        <%= hidden_field_tag :sns_auth, true %>
      <% else %>
      <div class="cp_iptxt">
          <label>password</label>
        <%= f.password_field :password, class:"input-default", id:"password",placeholder:"6文字以上の半角英数字" %>
      </div>

      <div class="cp_iptxt">
          <label>password(確認用)</label>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation",placeholder:"同じパスワードを入力" %>
      </div>
      <% end %>
      <div class="cp_iptxt">
          <label>name</label>
        <%= f.text_field :name, class:"input-default", id:"name",placeholder:"山田花子 ※全角" %>
        <span class="focus_line"></span>
      </div>

      <div class="cp_iptxt">
          <label>name(カナ)</label>
        <%= f.text_field :name_kana, class:"input-default", id:"name_kana",placeholder:"ヤマダハナコ ※全角" %>
      </div>

      <div class="btn-submit">
        <%= f.submit "アカウント登録" ,class:"btn-flat-border" %>
      </div>
      <br>
    <% end %>
  </div>
</div>
