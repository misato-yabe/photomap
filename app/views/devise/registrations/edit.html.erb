<%= render "shared/header"%>

<div class='main'>
  <div class="user-form">
    <div class="form-title">
    マイページ編集
    </div>
    <%= form_with model: @user, url: user_path(@user.id), local: true do |f| %>
    <%= render "shared/error_messages", model: f.object %>

    <div class="cp_iptxt">
      <label>表示名</label>
      <%= f.text_field :nickname, autofocus: true, class:"input-default", id:"nickname",placeholder:"ABC ※20字まで", maxlength:"20"  %>
    </div>

    <div class="cp_iptxt">
      <label>アイコン画像</label>
      <%= f.file_field :image, id:"photo-image",placeholder:"アイコン画像" %>
      <div id="image-list"></div>
    </div>

    <div class="cp_iptxt">
      <label>自己紹介</label>
      <%= f.text_area :concept, class:"input-default", id:"photo-comment",rows:"1",placeholder:"(例) はじめまして。" %>
    </div>

    <div class="btn-submit">
      <%= f.submit "更新する" ,class:"btn-flat-border" %>
    </div>
    <% end %>
