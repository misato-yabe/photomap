<%= render "shared/header"%>
<h2>ユーザー編集</h2>
<%= form_with model: @user, url: user_path(@user.id), local: true do |f| %>

<%# <%= render "shared/error_messages", model: f.object %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :nickname, "ニックネーム" %><br>
    <%= f.text_area :nickname, id:"nickname", placeholder:"(例) abc", maxlength:"40" %>
  </div>

  <div class="field">
    <%= f.label :user_image, "アイコン画像" %><br>
    <%= f.file_field :user_image, id:"photo-image" , autocomplete: "アイコン画像"  %>
  </div>

  <div class="field">
    <%= f.label :concept, "自己紹介"  %><br />
    <%= f.text_area :concept, autofocus: true, placeholder: "(例) はじめまして。"  %>
  </div>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
