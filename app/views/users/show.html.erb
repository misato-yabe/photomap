<%= render "shared/header" %>

<div class='main'>
<p><%= @nickname %>さんの投稿一覧</p>
  <ul class="photos-lists">
  <% if @photos != nil %>
    <% @photos.each do |photo| %>
    <li class='photo-content'>
        <%= link_to "#" do %>
          <div class='photo-img-content'>
          <%= image_tag photo.image.variant(combine_options:{gravity: :center, resize:"640x640^", crop:"640x640+0+0" }), class: 'photo-img'%>
        <% end %>
        <div class='star-btn'>
          <%= image_tag "star.png", class:"star-icon" %>
          <span class='star-count'>0</span>
        </div>
      </div>
    </li>
    <% end %>
  <% else %>
    <li class='photo-content'>
      <%= image_tag "sample1.jpg", class: "photo-img" %>
