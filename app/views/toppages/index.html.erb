<div class="top-header">
  <%= link_to root_path, class:"top-image" do %>
    <%= image_tag "logo.png" %>
  <% end %>
  <nav id="menubar">
    <ul class="menubar-list">
        <li><%= link_to 'Search', photos_search_photos_path, class: "serch" %></li>
      <% if user_signed_in? %>
        <li><%= link_to 'My Page', user_path(current_user.id), class: "mypage" %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "logout"%></li>
        <li><%= link_to 'Post', new_photo_path , class: "post" %></li>
      <% else %>
        <li><%= link_to 'Signin',new_user_registration_path, class: "signin" %></li>
        <li><%= link_to 'Login', new_user_session_path , method: :get, class: "login" %></li>
      <% end %>
    </ul>
  </nav>
</div>

<div class='main'>
  <p>Pick Up Photos</p>
    <ul class="photos-lists">
    <% if @photos != nil %>
      <% @photos.each do |photo| %>
      <li class='photo-content'>
        <div class="photo-img-content">
